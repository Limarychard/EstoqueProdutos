@model ConfiguracaoViewModel;

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-4 text-center">Configurações da Conta</h5>
        <div class="d-flex justify-content-between">
            <div class="card p-4 shadow-sm flex-fill me-3">
                <h6 class="text-primary mb-3">Alterar Senha</h6>
                <form asp-action="AlterarSenha" method="post">
                    <div class="form-group mb-3">
                        <label for="SenhaAtual" class="form-label">Senha Atual</label>
                        @Html.TextBoxFor(m => m.AlterarSenha.SenhaAtual, new { @class = "form-control", @placeholder = "Digite a senha atual" })
                        @Html.ValidationMessageFor(m => m.AlterarSenha.SenhaAtual, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="NovaSenha" class="form-label">Nova Senha</label>
                        @Html.TextBoxFor(m => m.AlterarSenha.NovaSenha, new { @class = "form-control", @placeholder = "Digite a senha atual" })
                        @Html.ValidationMessageFor(x => x.AlterarSenha.NovaSenha, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="ConfirmarNovaSenha" class="form-label">Confirmar Nova Senha</label>
                        @Html.TextBoxFor(m => m.AlterarSenha.ConfirmarNovaSenha, new { @class = "form-control", @placeholder = "Digite a senha atual" })
                        @Html.ValidationMessageFor(x => x.AlterarSenha.ConfirmarNovaSenha, null, new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Alterar</button>
                </form>
            </div>

            <!-- Formulário para alterar email -->
            <div class="card p-4 shadow-sm flex-fill ms-3">
                <h6 class="text-primary mb-3">Alterar Email</h6>
                <form asp-action="AlterarEmail" method="post">
                    <div class="form-group mb-3">
                        <label for="EmailAtual" class="form-label">E-mail Atual</label>
                        @Html.TextBoxFor(m => m.AlterarEmail.EmailAtual, new { @class = "form-control", @placeholder = "Digite a senha atual" })
                        @Html.ValidationMessageFor(x => x.AlterarEmail.EmailAtual, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="NovoEmail" class="form-label">Novo E-mail</label>
                        @Html.TextBoxFor(m => m.AlterarEmail.NovoEmail, new { @class = "form-control", @placeholder = "Digite a senha atual" })
                        @Html.ValidationMessageFor(x => x.AlterarEmail.NovoEmail, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="ConfirmarNovoEmail" class="form-label">Confirmar Novo E-mail</label>
                        @Html.TextBoxFor(m => m.AlterarEmail.ConfirmarNovoEmail, new { @class = "form-control", @placeholder = "Digite a senha atual" })
                        @Html.ValidationMessageFor(x => x.AlterarEmail.ConfirmarNovoEmail, null, new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Alterar</button>
                </form>
            </div>
        </div>
    </div>
</div>
