@using EstoqueProdutos.Enums
@model UsuarioModel;

<div class="container border">

    <h1>Criar um novo usuário</h1>

    <form method="post" asp-controller="Usuario" asp-action="Criar" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-12">
            <div class="col-12">
                <label asp-for="Nome" for="inputNome" class="form-label">Nome</label>
                <input asp-for="Nome" type="text" class="form-control" id="inputNome">
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
        </div>
        <div class="col-12">
            <label asp-for="Login" for="inputLogin" class="form-label">Login</label>
            <input asp-for="Login" type="tel" class="form-control" id="inputLogin">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="col-12">
            <label asp-for="Email" for="inputEmail" class="form-label">E-mail</label>
            <input asp-for="Email" type="text" class="form-control" id="inputEmail">
        </div>
        <div class="col-12 text-start pt-3">
            <label asp-for="Logo" for="inputLogo" class="form-label">Logo</label>
            <div class="custom-file-upload">
                <input asp-for="Logo" type="file" id="inputLogo" name="Logo" />
                <span class="upload-text">Selecione uma imagem...</span>
            </div>
            @Html.ValidationMessageFor(x => x.Logo)
        </div>
        <div class="form-group">
            <label for="Perfil" class="form-label">Perfil</label>
            <select asp-for="Perfil" class="form-select form-select-sm" aria-label="Small select example">
                <option value="" selected>Selecione</option>
                <option value="@PerfilEnum.Admin">Admin</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>
            @Html.ValidationMessageFor(x => x.Perfil)
        </div>
        <div class="form-group">
            <label for="senha" class="form-label">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha do usuário">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
        <div class="d-flex gap-5 mb-3">
            <button type="submit" class="btn btn-primary w-50">Criar</button>
            <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary w-50"> Voltar </a>
        </div>

    </form>

</div>