@model ProdutoModel;

<div class="container border">

    <h1>Cadastrar um novo produto</h1>

    <form method="post" asp-controller="Produto" asp-action="Criar" enctype="multipart/form-data" class="row g-3">
        <div class="col-12">
            <label asp-for="Foto" for="inputFoto" class="form-label">Foto</label>
            <input asp-for="Foto" type="file" class="form-control" id="inputFoto" name="Foto">
            @Html.ValidationMessageFor(x => x.Foto)
        </div>
        <div class="col-md-12">
            <div class="col-12">
                <label asp-for="Nome" for="inputNome" class="form-label">Nome</label>
                <input asp-for="Nome" type="text" class="form-control" id="inputNome">
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
        </div>
        <div class="col-12">
            <label asp-for="Valor" for="inputValor" class="form-label">Valor</label>
            <input asp-for="Valor" type="text" class="form-control" id="inputValor">
            @Html.ValidationMessageFor(x => x.Valor)
        </div>
        <div class="col-12">
            <label asp-for="Quantidade" for="inputQuantidade" class="form-label">Quantidade</label>
            <input asp-for="Quantidade" type="number" class="form-control" id="inputQuantidade">
            @Html.ValidationMessageFor(x => x.Quantidade)
        </div>
        <div class="col-12">
            <label asp-for="Descricao" for="inputDescricao" class="form-label">Descricao</label>
            <textarea asp-for="Descricao" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="d-flex gap-5 mb-3">
            <button type="submit" class="btn btn-primary w-50">Criar</button>
            <a asp-controller="Produto" asp-action="Index" class="btn btn-secondary w-50"> Voltar </a>
        </div>

    </form>

</div>