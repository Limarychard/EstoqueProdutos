@model FornecedorModel;

<div class="container border">

    <h1>Editar o cliente</h1>

    <form method="post" asp-controller="Fornecedor" asp-action="Editar" class="row g-3">

        <div class="row mt-3">
            <h6> Endereços </h6>

            <div class="col-md-2">
                <label asp-for="CEP" for="inputCPF" class="form-label">CEP</label>
                <input disabled asp-for="CEP" type="text" class="form-control" id="inputCEP" onblur="buscarEnderecoPorCEP()">
            </div>

            <div class="col-md-1">
                <label asp-for="Estado" for="inputEstado" class="form-label">Estado</label>
                <input disabled asp-for="Estado" type="text" class="form-control" id="inputEstado">
            </div>

            <div class="col-md-3">
                <label asp-for="Cidade" for="inputCidade" class="form-label">Cidade</label>
                <input disabled asp-for="Cidade" type="text" class="form-control" id="inputCidade">
            </div>

            <div class="col-md-3">
                <label asp-for="Bairro" for="inputBairro" class="form-label">Bairro</label>
                <input disabled asp-for="Bairro" type="text" class="form-control" id="inputBairro">
            </div>

            <div class="col-md-4">
                <label asp-for="Rua" for="inputRua" class="form-label">Rua</label>
                <input disabled asp-for="Rua" type="text" class="form-control" id="inputRua">
            </div>

            <div class="col-md-3">
                <label asp-for="Numero" for="inputNumero" class="form-label">Numero</label>
                <input disabled asp-for="Numero" type="text" class="form-control" id="inputNumero">
            </div>

            <div class="col-md-3">
                <label asp-for="Complemento" for="inputComplemento" class="form-label">Complemento</label>
                <input disabled asp-for="Complemento" type="text" class="form-control" id="inputComplemento">
            </div>

            <div class="col-md-2 align-content-end">
                <input asp-for="ExisteComplemento" class="form-check-input" type="checkbox" id="ExisteComplemento" name="ExisteComplemento">
                <label disabled asp-for="ExisteComplemento" class="form-check-label">
                    Não tem
                </label>
            </div>

        </div>

        <div class="d-flex gap-2 mb-3 mt-">
            <a asp-controller="Fornecedor" asp-action="Index" class="btn btn-secondary w-25">Voltar</a>
        </div>

    </form>

</div>